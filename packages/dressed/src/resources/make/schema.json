{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "routes": {
      "type": "object",
      "additionalProperties": {
        "properties": {
          "params": {
            "type": "array",
            "items": {
              "anyOf": [
                { "type": "string", "title": "Data", "enum": ["data", "data?"] },
                { "type": "string", "title": "Params", "enum": ["params", "params?"] },
                {
                  "type": "string",
                  "title": "URL parameter",
                  "pattern": "^url\\..+$",
                  "examples": ["url.key", "url.key?", "url.key<value", "url.key<value?"]
                },
                {
                  "type": "string",
                  "title": "Var parameter",
                  "pattern": "^var\\..+$",
                  "examples": ["var.key", "var.key?"]
                }
              ]
            },
            "uniqueItems": true
          },
          "overrides": {
            "type": "object",
            "properties": {
              "apiRoute": { "type": "string" },
              "dangerousExtraLogic": { "type": "string" },
              "dataType": { "type": "string" },
              "fetchOptions": { "type": "object" },
              "fileKey": { "type": "string", "pattern": "^(\\..+|)$", "examples": [".file", ".file!"] },
              "generic": { "type": "string" },
              "imports": { "type": "array", "items": { "type": "string" } },
              "messageKey": { "type": "string", "pattern": "^\\..+$" },
              "name": { "type": "string" },
              "splitKeyStart": { "type": "number" },
              "paramsType": { "type": "string" },
              "returnType": { "type": "string" }
            },
            "additionalProperties": false
          },
          "flags": {
            "type": "array",
            "items": { "enum": ["deprecated", "form", "hasFiles", "hasStringableContent", "returnVoid", "singlefile"] },
            "uniqueItems": true
          },
          "docs": {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "infos": { "type": "array", "items": { "type": "string" } },
              "warns": { "type": "array", "items": { "type": "string" } },
              "dangers": { "type": "array", "items": { "type": "string" } },
              "see": { "type": "string" }
            },
            "required": ["description", "see"],
            "additionalProperties": false
          },
          "TODO": { "type": "string" }
        },
        "required": ["params", "docs"],
        "additionalProperties": false
      }
    }
  },
  "required": ["routes"]
}
